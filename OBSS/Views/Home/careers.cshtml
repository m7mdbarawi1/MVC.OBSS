@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Careers_Title"];
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">@Localizer["Careers_Header"]</h1>
            <p class="lead">@Localizer["Careers_Lead"]</p>
        </div>
    </div>

    <!-- Careers Info -->
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="mb-3">@Localizer["Careers_Environment_Title"]</h2>
                    <p>@Localizer["Careers_Environment_Text"]</p>
                    <ul>
                        <li>@Localizer["Careers_Environment_Point1"]</li>
                        <li>@Localizer["Careers_Environment_Point2"]</li>
                        <li>@Localizer["Careers_Environment_Point3"]</li>
                        <li>@Localizer["Careers_Environment_Point4"]</li>
                    </ul>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="mb-3">@Localizer["Careers_Openings_Title"]</h2>
                    <p>@Localizer["Careers_Openings_Text"]</p>
                    <ul>
                        <li>@Localizer["Careers_Openings_Job1"]</li>
                        <li>@Localizer["Careers_Openings_Job2"]</li>
                        <li>@Localizer["Careers_Openings_Job3"]</li>
                        <li>@Localizer["Careers_Openings_Job4"]</li>
                    </ul>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="mb-3">@Localizer["Careers_Apply_Title"]</h2>
                    <p>@Localizer["Careers_Apply_Text"]</p>
                    <ul>
                        <li>@Localizer["Careers_Apply_Email1"] <a href="mailto:hr@example.com">hr@example.com</a></li>
                        <li>@Localizer["Careers_Apply_Email2"] <a href="mailto:careers@example.com">careers@example.com</a></li>
                    </ul>
                    <p class="text-muted">@Localizer["Careers_Apply_Note"]</p>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="mb-3">@Localizer["Careers_Internship_Title"]</h2>
                    <p>@Localizer["Careers_Internship_Text"]</p>
                    <ul>
                        <li>@Localizer["Careers_Internship_Point1"]</li>
                        <li>@Localizer["Careers_Internship_Point2"]</li>
                        <li>@Localizer["Careers_Internship_Point3"]</li>
                    </ul>
                    <p>@Localizer["Careers_Internship_Apply"] <a href="mailto:internships@example.com">internships@example.com</a></p>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <h2 class="mb-3">@Localizer["Careers_Contact_Title"]</h2>
                    <p>@Localizer["Careers_Contact_Email"] <a href="mailto:hr@example.com">hr@example.com</a></p>
                    <p>@Localizer["Careers_Contact_Phone"] +1 (555) 123-4567</p>
                    <p>@Localizer["Careers_Contact_Address"] 123 Main Street, Your City, Country</p>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            console.log('Careers page loaded.');
        });
    </script>
}
