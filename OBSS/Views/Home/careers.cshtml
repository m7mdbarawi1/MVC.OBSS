@{
    ViewData["Title"] = "Careers";
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">Careers</h1>
            <p class="lead">Join our team and help us grow in a collaborative environment!</p>
        </div>
    </div>

    <!-- Careers Info -->
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="mb-3">Our Work Environment</h2>
                    <p>
                        We foster a collaborative and inclusive work environment where creativity
                        and innovation are encouraged. Our team members enjoy flexible working hours,
                        continuous learning opportunities, and a culture of mutual respect.
                    </p>
                    <ul>
                        <li>Flexible working hours and remote options</li>
                        <li>Professional development and mentorship programs</li>
                        <li>Diverse and inclusive workplace culture</li>
                        <li>Team-building activities and social events</li>
                    </ul>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="mb-3">Current Openings</h2>
                    <p>
                        We are always looking for talented professionals in various departments.
                        Please check our website regularly for updates on available positions.
                    </p>
                    <ul>
                        <li>Software Engineer</li>
                        <li>Marketing Specialist</li>
                        <li>Sales Executive</li>
                        <li>HR Coordinator</li>
                    </ul>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="mb-3">How to Apply</h2>
                    <p>
                        Interested candidates can send their resumes and cover letters directly to our HR team:
                    </p>
                    <ul>
                        <li>Email: <a href="mailto:hr@example.com">hr@example.com</a></li>
                        <li>Email: <a href="mailto:careers@example.com">careers@example.com</a></li>
                    </ul>
                    <p class="text-muted">
                        Include the position you are applying for in the subject line. Our HR team
                        reviews applications weekly and will contact qualified candidates.
                    </p>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="mb-3">Internship Opportunities</h2>
                    <p>
                        We offer internship programs for students and recent graduates who want
                        to gain hands-on experience in a professional environment. Interns will
                        have the chance to work on meaningful projects with guidance from experienced professionals.
                    </p>
                    <ul>
                        <li>Duration: 3-6 months</li>
                        <li>Departments: Software Development, Marketing, Sales, HR</li>
                        <li>Stipend: Competitive and based on experience</li>
                    </ul>
                    <p>
                        Apply via email: <a href="mailto:internships@example.com">internships@example.com</a>
                    </p>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <h2 class="mb-3">Contact Us</h2>
                    <p>Email: <a href="mailto:hr@example.com">hr@example.com</a></p>
                    <p>Phone: +1 (555) 123-4567</p>
                    <p>Address: 123 Main Street, Your City, Country</p>
                </div>
            </div>

        </div>
    </div>
</div>

