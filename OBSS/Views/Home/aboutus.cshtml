@{
    ViewData["Title"] = "About Us";
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">About Us</h1>
            <p class="lead">Learn more about our mission, vision, and team.</p>
        </div>
    </div>

    <!-- About Section -->
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="mb-3">Our Mission</h2>
                    <p>
                        Our mission is to provide high-quality products and services that improve the
                        daily lives of our customers. We are committed to excellence, innovation,
                        and integrity in everything we do.
                    </p>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="mb-3">Our Vision</h2>
                    <p>
                        We aim to become the leading provider in our industry, setting standards for
                        quality, customer satisfaction, and ethical business practices.
                    </p>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="mb-3">Our Team</h2>
                    <p>
                        Our team is composed of dedicated professionals with expertise across
                        multiple domains. We work collaboratively to ensure that every project
                        meets our high standards of excellence.
                    </p>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <h2 class="mb-3">Contact Us</h2>
                    <p>Email: <a href="mailto:info@example.com">info@example.com</a></p>
                    <p>Phone: +1 (555) 123-4567</p>
                    <p>Address: 123 Main Street, Your City, Country</p>
                </div>
            </div>
        </div>
    </div>
</div>

