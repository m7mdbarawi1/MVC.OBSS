@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["AboutUs_Title"];
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">@Localizer["AboutUs_Header"]</h1>
            <p class="lead">@Localizer["AboutUs_Lead"]</p>
        </div>
    </div>

    <!-- About Section -->
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="mb-3">@Localizer["AboutUs_Mission_Title"]</h2>
                    <p>@Localizer["AboutUs_Mission_Text"]</p>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="mb-3">@Localizer["AboutUs_Vision_Title"]</h2>
                    <p>@Localizer["AboutUs_Vision_Text"]</p>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="mb-3">@Localizer["AboutUs_Team_Title"]</h2>
                    <p>@Localizer["AboutUs_Team_Text"]</p>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <h2 class="mb-3">@Localizer["AboutUs_Contact_Title"]</h2>
                    <p>@Localizer["AboutUs_Contact_Email"] <a href="mailto:info@example.com">info@example.com</a></p>
                    <p>@Localizer["AboutUs_Contact_Phone"] +1 (555) 123-4567</p>
                    <p>@Localizer["AboutUs_Contact_Address"] 123 Main Street, Your City, Country</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            console.log('About Us page loaded.');
        });
    </script>
}