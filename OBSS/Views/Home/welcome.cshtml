<!-- CALL TO ACTION -->
<section class="cta-section text-white text-center py-5">
    <div class="container">
        <h2 class="fw-bold">Start Your Reading Journey Today</h2>
        <p class="lead mt-2">Join OBSS and explore thousands of titles at your fingertips.</p>
        <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg mt-3">
            <i class="bi bi-person-plus"></i> Sign Up Now
        </a>
    </div>
