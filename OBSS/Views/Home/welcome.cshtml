@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["WelcomeTitle"];
}

<!-- HERO SECTION -->
<section class="hero-section text-white d-flex align-items-center"
         style="background: url('~/images/hero-bg.jpg') no-repeat center center/cover; height: 70vh;">
    <div class="container text-center">
        <h1 class="display-3 fw-bold">@Localizer["HeroTitle"]</h1>
        <p class="lead mt-3">@Localizer["HeroSubtitle"]</p>
        <div class="mt-4 d-flex justify-content-center gap-3 flex-wrap">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="bi bi-book"></i> @Localizer["BrowseBooks"]
            </a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-accent btn-lg">
                <i class="bi bi-person-plus"></i> @Localizer["JoinNow"]
            </a>
        </div>
    </div>
</section>

<hr class="section-divider" />

<!-- FEATURES SECTION -->
<div class="container page-wrapper py-5">
    <div class="row mb-5 text-center">
        <div class="col-12">
            <h2 class="fw-bold">@Localizer["WhyChooseOBSS"]</h2>
            <p class="section-subtitle">@Localizer["FeaturesSubtitle"]</p>
        </div>
    </div>
    <div class="row justify-content-center g-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <img src="~/ew.jpg" class="card-img-top" alt="@Localizer["VastCollection"]">
                <div class="card-body text-center">
                    <i class="bi bi-journal-richtext display-4 text-primary mb-3"></i>
                    <h5 class="fw-bold">@Localizer["VastCollection"]</h5>
                    <p>@Localizer["VastCollectionDesc"]</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <img src="~/wf.jpg" class="card-img-top" alt="@Localizer["EasyShopping"]">
                <div class="card-body text-center">
                    <i class="bi bi-cart-check display-4 text-success mb-3"></i>
                    <h5 class="fw-bold">@Localizer["EasyShopping"]</h5>
                    <p>@Localizer["EasyShoppingDesc"]</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <img src="~/gr.jpg" class="card-img-top" alt="@Localizer["RatingsReviews"]">
                <div class="card-body text-center">
                    <i class="bi bi-star-fill display-4 text-warning mb-3"></i>
                    <h5 class="fw-bold">@Localizer["RatingsReviews"]</h5>
                    <p>@Localizer["RatingsReviewsDesc"]</p>
                </div>
            </div>
        </div>
    </div>
</div>

<hr class="section-divider" />

<!-- ABOUT SECTION -->
<section id="about" class="py-5">
    <div class="container text-center">
        <h2 class="fw-bold">@Localizer["AboutOBSS"]</h2>
        <p class="section-subtitle mt-3">@Localizer["AboutOBSSDesc"]</p>
        <img src="~/OBSS2.png" alt="@Localizer["AboutOBSS"]" class="img-fluid rounded shadow mt-4" style="max-height: 300px;">
    </div>
</section>

<hr class="section-divider" />

<!-- POPULAR BOOKS SECTION -->
<div id="popular-books" class="container py-5">
    <div class="row mb-4 text-center">
        <div class="col-12">
            <h2 class="fw-bold">@Localizer["PopularBooks"]</h2>
            <p class="section-subtitle">@Localizer["PopularBooksSubtitle"]</p>
        </div>
    </div>
    <div class="row g-4">
        <div class="col-sm-6 col-md-3">
            <div class="card shadow-sm h-100">
                <img src="~/atom.jpeg" class="card-img-top" alt="Book 1">
                <div class="card-body">
                    <h5 class="card-title fw-bold">@Localizer["Book1Title"]</h5>
                    <p class="card-text">@Localizer["Book1Desc"]</p>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3">
            <div class="card shadow-sm h-100">
                <img src="~/s.jpg" class="card-img-top" alt="Book 2">
                <div class="card-body">
                    <h5 class="card-title fw-bold">@Localizer["Book2Title"]</h5>
                    <p class="card-text">@Localizer["Book2Desc"]</p>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3">
            <div class="card shadow-sm h-100">
                <img src="~/greenDrum.jpeg" class="card-img-top" alt="Book 3">
                <div class="card-body">
                    <h5 class="card-title fw-bold">@Localizer["Book3Title"]</h5>
                    <p class="card-text">@Localizer["Book3Desc"]</p>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3">
            <div class="card shadow-sm h-100">
                <img src="~/leadership.jpg" class="card-img-top" alt="Book 4">
                <div class="card-body">
                    <h5 class="card-title fw-bold">@Localizer["Book4Title"]</h5>
                    <p class="card-text">@Localizer["Book4Desc"]</p>
                </div>
            </div>
        </div>
    </div>
</div>

<hr class="section-divider" />

<!-- TESTIMONIALS SECTION -->
<section id="testimonials" class="py-5">
    <div class="container">
        <div class="row mb-4 text-center">
            <div class="col-12">
                <h2 class="fw-bold">@Localizer["Testimonials"]</h2>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card shadow-sm h-100 p-3">
                    <p>@Localizer["Testimonial1"]</p>
                    <h6 class="fw-bold mt-3">@Localizer["Testimonial1Author"]</h6>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm h-100 p-3">
                    <p>@Localizer["Testimonial2"]</p>
                    <h6 class="fw-bold mt-3">@Localizer["Testimonial2Author"]</h6>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm h-100 p-3">
                    <p>@Localizer["Testimonial3"]</p>
                    <h6 class="fw-bold mt-3">@Localizer["Testimonial3Author"]</h6>
                </div>
            </div>
        </div>
    </div>
</section>

<hr class="section-divider" />

<!-- CALL TO ACTION -->
<section class="cta-section text-white text-center py-5">
    <div class="container">
        <h2 class="fw-bold">@Localizer["CTA_Title"]</h2>
        <p class="lead mt-2">@Localizer["CTA_Subtitle"]</p>
        <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg mt-3">
            <i class="bi bi-person-plus"></i> @Localizer["CTA_Button"]
        </a>
    </div>
</section>
