@{
    ViewData["Title"] = "Welcome";
}

<!-- HERO SECTION -->
<section class="hero-section text-white d-flex align-items-center"
         style="background: url('~/images/hero-bg.jpg') no-repeat center center/cover; height: 70vh;">
    <div class="container text-center">
        <h1 class="display-3 fw-bold">Welcome to OBSS Book Store</h1>
        <p class="lead mt-3">Discover, explore, and purchase your favorite books with ease.</p>
        <div class="mt-4 d-flex justify-content-center gap-3 flex-wrap">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="bi bi-book"></i> Browse Books
            </a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-accent btn-lg">
                <i class="bi bi-person-plus"></i> Join Now
            </a>
        </div>
    </div>
</section>

<hr class="section-divider" />

<!-- FEATURES SECTION -->
<div class="container page-wrapper py-5">
    <div class="row mb-5 text-center">
        <div class="col-12">
            <h2 class="fw-bold">Why Choose OBSS?</h2>
            <p class="section-subtitle">We provide an exceptional experience for every book lover.</p>
        </div>
    </div>
    <div class="row justify-content-center g-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <img src="~/new.png" class="card-img-top" alt="Vast Collection">
                <div class="card-body text-center">
                    <i class="bi bi-journal-richtext display-4 text-primary mb-3"></i>
                    <h5 class="fw-bold">Vast Collection</h5>
                    <p>Browse books across categories: novels, science, education, and more.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <img src="~/new.png" class="card-img-top" alt="Easy Shopping">
                <div class="card-body text-center">
                    <i class="bi bi-cart-check display-4 text-success mb-3"></i>
                    <h5 class="fw-bold">Easy Shopping</h5>
                    <p>Add books to your cart, manage quantities, and checkout securely.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <img src="~/new.png" class="card-img-top" alt="Ratings & Reviews">
                <div class="card-body text-center">
                    <i class="bi bi-star-fill display-4 text-warning mb-3"></i>
                    <h5 class="fw-bold">Ratings & Reviews</h5>
                    <p>Rate books, share your opinions, and explore top-rated reads.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<hr class="section-divider" />

<!-- ABOUT SECTION -->
<section id="about" class="py-5">
    <div class="container text-center">
        <h2 class="fw-bold">About OBSS</h2>
        <p class="section-subtitle mt-3">
            OBSS Book Store is your trusted partner for exploring knowledge and imagination.
            We believe in empowering readers with a wide selection of titles across all genres.
        </p>
        <img src="~/new.png" alt="About Us" class="img-fluid rounded shadow mt-4" style="max-height: 300px;">
    </div>
</section>

<hr class="section-divider" />

