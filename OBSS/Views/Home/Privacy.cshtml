@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PrivacyPolicyTitle"];
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">@Localizer["PrivacyPolicyTitle"]</h1>
        </div>
    </div>

    <!-- Centered Privacy Card -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">@Localizer["PrivacyCommitment"]</h5>
                </div>
                <div class="card-body">
                    <p>@Localizer["PrivacyDescription"]</p>
                </div>
                <div class="card-footer text-end">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> @Localizer["BackToHome"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
