@model OBSS.Models.Category
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["DeleteCategory"];
    bool hasBooks = ViewBag.HasBooks ?? false;
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title text-danger">@Localizer["DeleteCategory"]</h1>
            <p class="text-muted">
                @if (hasBooks)
                {
                    <span>@Localizer["CannotDeleteWithBooks"]</span>
                }
                else
                {
                    <span>@Localizer["ConfirmDeleteQuestion"]</span>
                }
            </p>
        </div>
    </div>

    <!-- Centered Delete Card -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">@Localizer["ConfirmDeletion"]</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold">@Localizer["Category"]</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryDesc)</dd>
                    </dl>

                    @if (hasBooks)
                    {
                        <div class="alert alert-danger mt-3 mb-0">
                            <i class="bi bi-exclamation-triangle"></i>
                            @Localizer["DeleteBlockedMessage"]
                        </div>
                    }
                </div>
                <div class="card-footer d-flex justify-content-end gap-2">
                    @if (!hasBooks)
                    {
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" asp-for="CategoryId" />
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> @Localizer["Delete"]
                            </button>
                        </form>
                    }
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> @Localizer["Cancel"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
