@model OBSS.Models.Category

@{
    ViewData["Title"] = "Delete Category";
    bool hasBooks = ViewBag.HasBooks ?? false;
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title text-danger">Delete Category</h1>
            <p class="text-muted">
                @if (hasBooks)
                {
                    <span>This category cannot be deleted because it has related books.</span>
                }
                else
                {
                    <span>Are you sure you want to delete this category?</span>
                }
            </p>
        </div>
    </div>

    <!-- Centered Delete Card -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Confirm Deletion</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.CategoryDesc)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryDesc)</dd>
                    </dl>

                    @if (hasBooks)
                    {
                        <div class="alert alert-danger mt-3 mb-0">
                            <i class="bi bi-exclamation-triangle"></i>
                            This category is linked to existing books. You must delete or reassign those books before deleting this category.
                        </div>
                    }
                </div>
                <div class="card-footer d-flex justify-content-end gap-2">
                    @if (!hasBooks)
                    {
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" asp-for="CategoryId" />
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    }
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
