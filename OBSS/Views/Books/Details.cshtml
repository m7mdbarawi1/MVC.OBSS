@model OBSS.Models.Book
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["BookDetails"];
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">@Localizer["BookDetails"]</h1>
        </div>
    </div>

    <!-- Centered Details Card -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-body text-center">

                    <!-- Book Cover Image -->
                    @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                    {
                        <img src="@Model.CoverImageUrl" alt="@Localizer["Cover"]"
                             class="img-fluid rounded shadow-sm mb-3 w-100"
                             style="max-height: 400px; object-fit: cover;" />
                    }
                    else
                    {
                        <span class="text-muted d-block mb-3">@Localizer["NoImage"]</span>
                    }

                    <!-- Title, Category, Price, Add to Cart -->
                    <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between mb-4 gap-2">
                        <div class="text-start">
                            <h3 class="fw-bold mb-1 english-only">@Model.BookTitle</h3>
                            <p class="mb-0 text-muted english-only">@Localizer["Category"]: @Model.Category?.CategoryDesc</p>
                            <p class="mb-0 fw-bold text-success">$@Model.Price</p>
                        </div>
                        <form asp-controller="Carts" asp-action="AddToCart" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="bookId" value="@Model.BookId" />
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-cart-plus"></i> @Localizer["AddToCart"]
                            </button>
                        </form>
                    </div>

                    <!-- Other Book Details -->
                    <dl class="row text-start mb-0">
                        <dt class="col-sm-4 fw-bold">@Localizer["Subject"]</dt>
                        <dd class="col-sm-8 english-only">@Model.Subject</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Author"]</dt>
                        <dd class="col-sm-8 english-only">@Model.Author</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Publish"]</dt>
                        <dd class="col-sm-8">@Model.PublishDate?.ToString("d")</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Publisher"]</dt>
                        <dd class="col-sm-8 english-only">@Model.PublishingHouse</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Quantity"]</dt>
                        <dd class="col-sm-8">@Model.QuantityInStore</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Description"]</dt>
                        <dd class="col-sm-8 english-only">@Model.Description</dd>
                    </dl>

                </div>
                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> @Localizer["Back"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Restrict displayed or dynamic text to English letters, numbers, and common punctuation
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.english-only').forEach(element => {
                const clean = element.textContent.replace(/[^A-Za-z0-9\s.,'"\-!?:;()]/g, '');
                element.textContent = clean;
            });
        });
    </script>
}
