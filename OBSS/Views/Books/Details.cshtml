@model OBSS.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">Book Details</h1>
        </div>
    </div>

    <!-- Centered Details Card -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-body text-center">

                    <!-- Book Cover Image -->
                    @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                    {
                        <img src="@Model.CoverImageUrl" alt="Book Cover"
                             class="img-fluid rounded shadow-sm mb-3 w-100"
                             style="max-height: 400px; object-fit: cover;" />
                    }
                    else
                    {
                        <span class="text-muted d-block mb-3">No image available</span>
                    }

                    <!-- Title, Category, Price, Add to Cart -->
                    <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between mb-4 gap-2">
                        <div class="text-start">
                            <h3 class="fw-bold mb-1">@Model.BookTitle</h3>
                            <p class="mb-0 text-muted">Category: @Model.Category?.CategoryDesc</p>
                            <p class="mb-0 fw-bold text-success">$@Model.Price</p>
                        </div>
                        <form asp-controller="Carts" asp-action="AddToCart" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="bookId" value="@Model.BookId" />
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-cart-plus"></i> Add to Cart
                            </button>
                        </form>
                    </div>

                    <!-- Other Book Details -->
                    <dl class="row text-start mb-0">
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Subject)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Subject)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Author)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Author)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.PublishDate)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PublishDate)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.PublishingHouse)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PublishingHouse)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.QuantityInStore)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.QuantityInStore)</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Description)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
