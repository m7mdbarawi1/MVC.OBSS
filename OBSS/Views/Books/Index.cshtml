@model IEnumerable<OBSS.Models.Book>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Books"];
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-3">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <h1 class="page-title mb-2 mb-md-0" style="font-size:1.4rem;">@Localizer["Books"]</h1>
            <a asp-action="Create" class="btn btn-primary btn-sm" style="font-size:0.85rem; padding:0.35rem 0.65rem;">
                <i class="bi bi-plus-circle"></i> @Localizer["CreateNew"]
            </a>
        </div>
    </div>

    <!-- Search -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-2">
                    <input type="text" id="searchInput" class="form-control form-control-sm" placeholder="@Localizer["SearchBooks"]" style="font-size:0.85rem; padding:0.3rem 0.5rem;">
                </div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0 table-sm" style="font-size:0.85rem;">
                            <thead>
                                <tr>
                                    <th>@Localizer["Subject"]</th>
                                    <th>@Localizer["Title"]</th>
                                    <th>@Localizer["Author"]</th>
                                    <th>@Localizer["Publish"]</th>
                                    <th>@Localizer["Publisher"]</th>
                                    <th>@Localizer["Quantity"]</th>
                                    <th>@Localizer["Cover"]</th>
                                    <th>@Localizer["Description"]</th>
                                    <th>@Localizer["Price"]</th>
                                    <th>@Localizer["Category"]</th>
                                    <th class="text-center">@Localizer["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody id="booksTable">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr class="table-row-hover">
                                            <td>@item.Subject</td>
                                            <td>@item.BookTitle</td>
                                            <td>@item.Author</td>
                                            <td>@(item.PublishDate?.ToString("d"))</td>
                                            <td>@item.PublishingHouse</td>
                                            <td>@item.QuantityInStore</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.CoverImageUrl))
                                                {
                                                    <img src="@item.CoverImageUrl" alt="Cover" class="img-thumbnail" style="max-height:35px; max-width:35px;" />
                                                }
                                                else
                                                {
                                                    <span class="text-muted small">@Localizer["NoImage"]</span>
                                                }
                                            </td>
                                            <td class="text-truncate" style="max-width: 140px;" title="@item.Description">
                                                @item.Description
                                            </td>
                                            <td>$@item.Price</td>
                                            <td>@item.Category?.CategoryDesc</td>
                                            <td class="text-center">
                                                <div class="d-flex flex-wrap justify-content-center gap-1">
                                                    <a asp-action="Edit" asp-route-id="@item.BookId" class="btn btn-secondary btn-sm" style="font-size:0.75rem; padding:0.25rem 0.5rem;">
                                                        <i class="bi bi-pencil-square"></i> @Localizer["Edit"]
                                                    </a>
                                                    <a asp-action="Details" asp-route-id="@item.BookId" class="btn btn-accent btn-sm" style="font-size:0.75rem; padding:0.25rem 0.5rem;">
                                                        <i class="bi bi-info-circle"></i> @Localizer["Details"]
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.BookId" class="btn btn-danger btn-sm" style="font-size:0.75rem; padding:0.25rem 0.5rem;">
                                                        <i class="bi bi-trash"></i> @Localizer["Delete"]
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="11" class="text-center text-muted py-2">@Localizer["NoBooksFound"]</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("searchInput");
            const rows = document.querySelectorAll("#booksTable tr");

            searchInput.addEventListener("input", function () {
                const term = searchInput.value.toLowerCase();
                rows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    row.style.display = text.includes(term) ? "" : "none";
                });
            });
        });
    </script>
}
