@model IEnumerable<OBSS.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <h1 class="page-title mb-3 mb-md-0">@ViewData["Title"]</h1>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New
            </a>
        </div>
    </div>

    <!-- Search -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <input type="text" id="searchInput" class="form-control" placeholder="Search books...">
                </div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <!-- ✅ removed table-striped -->
                        <table class="table table-hover align-middle mb-0">
                            <thead>
                                <tr>
                                    <th>Subject</th>
                                    <th>Title</th>
                                    <th>Author</th>
                                    <th>Publish</th>
                                    <th>Publisher</th>
                                    <th>Qty</th>
                                    <th>Cover</th>
                                    <th>Description</th>
                                    <th>Price</th>
                                    <th>Category</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="booksTable">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr class="table-row-hover">
                                            <td>@item.Subject</td>
                                            <td>@item.BookTitle</td>
                                            <td>@item.Author</td>
                                            <td>@(item.PublishDate?.ToString("d"))</td>
                                            <td>@item.PublishingHouse</td>
                                            <td>@item.QuantityInStore</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.CoverImageUrl))
                                                {
                                                    <img src="@item.CoverImageUrl" alt="Cover" class="img-thumbnail" style="max-height:40px; max-width:40px;" />
                                                }
                                                else
                                                {
                                                    <span class="text-muted small">No Image</span>
                                                }
                                            </td>
                                            <td class="text-truncate" style="max-width: 150px;" title="@item.Description">
                                                @item.Description
                                            </td>
                                            <td>$@item.Price</td>
                                            <td>@item.Category?.CategoryDesc</td>
                                            <td class="text-center">
                                                <div class="d-flex flex-wrap justify-content-center gap-2">
                                                    <a asp-action="Edit" asp-route-id="@item.BookId" class="btn btn-secondary btn-sm">
                                                        <i class="bi bi-pencil-square"></i> Edit
                                                    </a>
                                                    <a asp-action="Details" asp-route-id="@item.BookId" class="btn btn-accent btn-sm">
                                                        <i class="bi bi-info-circle"></i> Details
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.BookId" class="btn btn-danger btn-sm">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="11" class="text-center text-muted py-3">
                                            No books found.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("searchInput");
            const rows = document.querySelectorAll("#booksTable tr");

            searchInput.addEventListener("input", function () {
                const term = searchInput.value.toLowerCase();
                rows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    row.style.display = text.includes(term) ? "" : "none";
                });
            });
        });
    </script>
}
