@model OBSS.Models.Book
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["DeleteBook"];
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title text-danger">@Localizer["DeleteBook"]</h1>
            <p class="text-muted">@Localizer["ConfirmDeleteMessage"]</p>
        </div>
    </div>

    <!-- Centered Delete Card -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">@Localizer["ConfirmDeletion"]</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold">@Localizer["Subject"]</dt>
                        <dd class="col-sm-8">@Model.Subject</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Title"]</dt>
                        <dd class="col-sm-8">@Model.BookTitle</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Author"]</dt>
                        <dd class="col-sm-8">@Model.Author</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Publish"]</dt>
                        <dd class="col-sm-8">@Model.PublishDate?.ToString("d")</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Publisher"]</dt>
                        <dd class="col-sm-8">@Model.PublishingHouse</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Quantity"]</dt>
                        <dd class="col-sm-8">@Model.QuantityInStore</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Cover"]</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                            {
                                <img src="@Model.CoverImageUrl" alt="@Localizer["Cover"]" class="img-thumbnail" style="max-height: 150px;" />
                            }
                            else
                            {
                                <span class="text-muted">@Localizer["NoImage"]</span>
                            }
                        </dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Description"]</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Price"]</dt>
                        <dd class="col-sm-8">$@Model.Price</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Category"]</dt>
                        <dd class="col-sm-8">@Model.Category?.CategoryDesc</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-end gap-2">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="BookId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> @Localizer["Delete"]
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> @Localizer["Cancel"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
