@model IEnumerable<OBSS.Models.Book>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["RequiredBooks"];
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <h1 class="page-title mb-3 mb-md-0">@Localizer["RequiredBooks"] (@Localizer["OutOfStock"])</h1>
            <a asp-action="DownloadRequiredBooksReport" class="btn btn-primary">
                <i class="bi bi-download"></i> @Localizer["DownloadReport"]
            </a>
        </div>
    </div>

    <!-- Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead>
                                <tr>
                                    <th>@Localizer["Title"]</th>
                                    <th>@Localizer["Author"]</th>
                                    <th>@Localizer["Category"]</th>
                                    <th>@Localizer["Quantity"]</th>
                                    <th class="text-center">@Localizer["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody id="requiredBooksTable">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var book in Model)
                                    {
                                        <tr class="table-row-hover">
                                            <td>
                                                <input type="text" value="@book.BookTitle" class="form-control english-only" readonly />
                                            </td>
                                            <td>
                                                <input type="text" value="@book.Author" class="form-control english-only" readonly />
                                            </td>
                                            <td>
                                                <input type="text" value="@book.Category?.CategoryDesc" class="form-control english-only" readonly />
                                            </td>
                                            <td>0 (@Localizer["OutOfStock"])</td>
                                            <td class="text-center">
                                                <div class="d-flex flex-wrap justify-content-center gap-2">
                                                    <a asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-secondary btn-sm">
                                                        <i class="bi bi-pencil-square"></i> @Localizer["Update"]
                                                    </a>
                                                    <a asp-action="Details" asp-route-id="@book.BookId" class="btn btn-accent btn-sm">
                                                        <i class="bi bi-info-circle"></i> @Localizer["Details"]
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted py-3">
                                            @Localizer["NoRequiredBooks"]
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Restrict to English letters, numbers, and spaces -->
<script>
    document.querySelectorAll('.english-only').forEach(input => {
        input.addEventListener('input', function () {
            // Allow only English letters, numbers, and spaces
            this.value = this.value.replace(/[^A-Za-z0-9\s]/g, '');
        });
    });
</script>
