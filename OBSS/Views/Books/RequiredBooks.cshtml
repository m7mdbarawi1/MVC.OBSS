@model IEnumerable<OBSS.Models.Book>

@{
    ViewData["Title"] = "Required Books";
}

<h1>Required Books (Out of Stock)</h1>

<div class="mb-3">
    <a asp-action="DownloadRequiredBooksReport" class="btn btn-success"> Download Report </a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Quantity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.BookTitle</td>
                <td>@book.Author</td>
                <td>@book.Category?.CategoryDesc</td>
                <td><span class="badge bg-danger">0 (Out of Stock)</span></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-warning btn-sm">Update Quantity</a>
                    <a asp-action="Details" asp-route-id="@book.BookId" class="btn btn-info btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
