@model OBSS.Models.Sale
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["SaleDetails"];
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">@Localizer["SaleDetails"]</h1>
        </div>
    </div>

    <!-- Centered Details Card -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">@Localizer["Details"]</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold">@Localizer["SaleDate"]</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SaleDate)</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["User"]</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.User.UserName)
                            <span class="text-muted">(@Localizer["ID"]: @Html.DisplayFor(model => model.User.UserId))</span>
                        </dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-left-circle"></i> @Localizer["Back"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
