@model OBSS.Models.Sale
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["CreateSale"];
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">@Localizer["CreateSale"]</h1>
        </div>
    </div>

    <!-- Centered Create Form -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label">@Localizer["User"]</label>
                            <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SaleDate" class="form-label">@Localizer["SaleDate"]</label>
                            <input asp-for="SaleDate" type="date" class="form-control" />
                            <span asp-validation-for="SaleDate" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> @Localizer["Create"]
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> @Localizer["Cancel"]
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
