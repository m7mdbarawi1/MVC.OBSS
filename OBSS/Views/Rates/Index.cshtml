@model IEnumerable<OBSS.Models.Rate>

@{
    ViewData["Title"] = "Rates";
}

<h1 class="mb-4">Rates</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Rating</th>
            <th>Book</th>
            <th>User</th>
            <th style="width: 180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Rate1</td>
                    <td>@item.Book?.BookTitle</td>
                    <td>@item.User?.UserName</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { bookId = item.BookId, userId = item.UserId }, new { @class = "btn btn-sm btn-warning me-1" })
                        @Html.ActionLink("Details", "Details", new { bookId = item.BookId, userId = item.UserId }, new { @class = "btn btn-sm btn-info me-1" })
                        @Html.ActionLink("Delete", "Delete", new { bookId = item.BookId, userId = item.UserId }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No ratings found.</td>
            </tr>
        }
    </tbody>
</table>
