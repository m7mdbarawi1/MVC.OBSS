@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["CustomerDashboardTitle"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body text-center">
            <!-- Title -->
            <h2 class="card-title mb-3">
                <i class="bi bi-house-heart"></i> @Localizer["CustomerDashboardTitle"]
            </h2>
            <p class="text-muted">@Localizer["CustomerWelcome"]</p>

            <!-- Dashboard Sections -->
            <div class="row text-center mt-4">
                <!-- My Cart -->
                <div class="col-md-4 mb-3">
                    <div class="p-3 border rounded section-card">
                        <i class="bi bi-cart-check fs-2 text-success"></i>
                        <h5 class="mt-2">@Localizer["MyCart"]</h5>
                        <p class="small text-muted">
                            @Localizer["MyCartDesc"]
                        </p>
                    </div>
                </div>

                <!-- My Orders -->
                <div class="col-md-4 mb-3">
                    <div class="p-3 border rounded section-card">
                        <i class="bi bi-box-seam fs-2 text-primary"></i>
                        <h5 class="mt-2">@Localizer["MyOrders"]</h5>
                        <p class="small text-muted">
                            @Localizer["MyOrdersDesc"]
                        </p>
                    </div>
                </div>

                <!-- Recommended Books -->
                <div class="col-md-4 mb-3">
                    <div class="p-3 border rounded section-card">
                        <i class="bi bi-stars fs-2 text-warning"></i>
                        <h5 class="mt-2">@Localizer["RecommendedBooks"]</h5>
                        <p class="small text-muted">
                            @Localizer["RecommendedBooksDesc"]
                        </p>
                    </div>
                </div>
            </div>

            <div class="row text-center mt-4">
                <!-- My Profile -->
                <div class="col-md-6 mb-3">
                    <div class="p-3 border rounded section-card">
                        <i class="bi bi-person-circle fs-2 text-info"></i>
                        <h5 class="mt-2">@Localizer["MyProfile"]</h5>
                        <p class="small text-muted">
                            @Localizer["MyProfileDesc"]
                        </p>
                    </div>
                </div>

                <!-- Support -->
                <div class="col-md-6 mb-3">
                    <div class="p-3 border rounded section-card">
                        <i class="bi bi-headset fs-2 text-danger"></i>
                        <h5 class="mt-2">@Localizer["Support"]</h5>
                        <p class="small text-muted">
                            @Localizer["SupportDesc"]
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
