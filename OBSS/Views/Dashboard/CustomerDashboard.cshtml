@{
    ViewData["Title"] = "Customer Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body text-center">
            <!-- Title -->
            <h2 class="card-title mb-3">
                <i class="bi bi-house-heart"></i> Customer Dashboard
            </h2>
            <p class="text-muted">Welcome back! Here’s a quick snapshot of your account and activity.</p>

            <!-- Dashboard Sections -->
            <div class="row text-center mt-4">
                <!-- My Cart -->
                <div class="col-md-4 mb-3">
                    <div class="p-3 border rounded section-card">
                        <i class="bi bi-cart-check fs-2 text-success"></i>
                        <h5 class="mt-2">My Cart</h5>
                        <p class="small text-muted">
                            Check the books you’ve added to your cart and get ready to complete your purchase.
                        </p>
                    </div>
                </div>

                <!-- My Orders -->
                <div class="col-md-4 mb-3">
                    <div class="p-3 border rounded section-card">
                        <i class="bi bi-box-seam fs-2 text-primary"></i>
                        <h5 class="mt-2">My Orders</h5>
                        <p class="small text-muted">
                            Review your previous orders and track the status of books currently being processed.
                        </p>
                    </div>
                </div>

                <!-- Recommended Books -->
                <div class="col-md-4 mb-3">
                    <div class="p-3 border rounded section-card">
                        <i class="bi bi-stars fs-2 text-warning"></i>
                        <h5 class="mt-2">Recommended Books</h5>
                        <p class="small text-muted">
                            Explore personalized book suggestions based on your reading preferences and past activity.
                        </p>
                    </div>
                </div>
            </div>

            <div class="row text-center mt-4">
                <!-- My Profile -->
                <div class="col-md-6 mb-3">
                    <div class="p-3 border rounded section-card">
                        <i class="bi bi-person-circle fs-2 text-info"></i>
                        <h5 class="mt-2">My Profile</h5>
                        <p class="small text-muted">
                            Update your personal details, contact information, and account settings whenever needed.
                        </p>
                    </div>
                </div>

                <!-- Support -->
                <div class="col-md-6 mb-3">
                    <div class="p-3 border rounded section-card">
                        <i class="bi bi-headset fs-2 text-danger"></i>
                        <h5 class="mt-2">Support</h5>
                        <p class="small text-muted">
                            Need assistance? Get help with your orders, account, or general inquiries from our team.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
