@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body text-center">
            <!-- Title -->
            <h2 class="card-title mb-3">
                <i class="bi bi-speedometer2"></i> Admin Dashboard
            </h2>
            <p class="text-muted">Welcome, Admin! Here’s an overview of your administrative tools.</p>

            <!-- Dashboard Sections -->
            <div class="row text-center mt-4">
                <!-- Manage Users -->
                <div class="col-md-4 mb-3">
                    <div class="p-3 border rounded section-card">
                        <i class="bi bi-people fs-2 text-primary"></i>
                        <h5 class="mt-2">Manage Users</h5>
                        <p class="small text-muted">
                            Create, update, and oversee user accounts, roles, and permissions.
                        </p>
                    </div>
                </div>

                <!-- Reports -->
                <div class="col-md-4 mb-3">
                    <div class="p-3 border rounded section-card">
                        <i class="bi bi-graph-up-arrow fs-2 text-success"></i>
                        <h5 class="mt-2">Reports</h5>
                        <p class="small text-muted">
                            Monitor system activity, track sales, and analyze performance trends.
                        </p>
                    </div>
                </div>

                <!-- System Settings -->
                <div class="col-md-4 mb-3">
                    <div class="p-3 border rounded section-card">
                        <i class="bi bi-gear fs-2 text-danger"></i>
                        <h5 class="mt-2">System Settings</h5>
                        <p class="small text-muted">
                            Configure platform preferences and manage core application settings.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
