@model OBSS.Models.User
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["MyProfile"];
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">@Localizer["MyProfile"]</h1>
        </div>
    </div>

    <!-- Centered Profile Form -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success text-center mb-3">
                            @ViewBag.Success
                        </div>
                    }

                    <form asp-action="MyProfile" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="UserId" />

                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">@Localizer["FirstName"]</label>
                            <input asp-for="FirstName" class="form-control"
                                   pattern="^[A-Za-z .]+$"
                                   title="Only English letters, spaces, and periods are allowed (no Arabic characters)." />
                            <div class="form-text">Only English letters, spaces, and periods are allowed.</div>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">@Localizer["LastName"]</label>
                            <input asp-for="LastName" class="form-control"
                                   pattern="^[A-Za-z .]+$"
                                   title="Only English letters, spaces, and periods are allowed (no Arabic characters)." />
                            <div class="form-text">Only English letters, spaces, and periods are allowed.</div>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">@Localizer["Username"]</label>
                            <input asp-for="UserName" class="form-control"
                                   pattern="^[A-Za-z0-9 .]+$"
                                   title="Only English letters, numbers, spaces, and periods are allowed (no Arabic characters)." />
                            <div class="form-text">Only English letters, numbers, spaces, and periods are allowed.</div>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">@Localizer["Password"]</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <div class="form-text">Password must be at least 8 characters long.</div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">@Localizer["Email"]</label>
                            <input asp-for="Email" type="email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ContactNumber" class="form-label">@Localizer["ContactNumber"]</label>
                            <input asp-for="ContactNumber" class="form-control"
                                   pattern="^\d{10}$"
                                   title="Contact number must be exactly 10 digits" />
                            <div class="form-text">Contact number must be exactly 10 digits.</div>
                            <span asp-validation-for="ContactNumber" class="text-danger"></span>
                        </div>

                        <!-- Update Button -->
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> @Localizer["UpdateProfile"]
                            </button>
                        </div>
                    </form>

                    <!-- Delete Account -->
                    <form asp-action="DeleteMyAccount" method="post"
                          onsubmit="return confirm('@Localizer["ConfirmDeleteAccount"]');"
                          class="mt-3">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-trash"></i> @Localizer["DeleteAccount"]
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const firstNameInput = document.getElementById('FirstName');
            const lastNameInput = document.getElementById('LastName');
            const usernameInput = document.getElementById('UserName');
            const contactInput = document.getElementById('ContactNumber');

            // Regex for FirstName and LastName: Allows English letters, spaces, and periods.
            const regexName = /[^A-Za-z .]/g;

            // Regex for UserName: Allows English letters, numbers, spaces, and periods.
            const regexUsername = /[^A-Za-z0-9 .]/g;

            // Regex for ContactNumber: Allows only digits.
            const regexContact = /\D/g;

            if(firstNameInput) {
                firstNameInput.addEventListener('input', e => {
                    e.target.value = e.target.value.replace(regexName, '');
                });
            }
            if(lastNameInput) {
                lastNameInput.addEventListener('input', e => {
                    e.target.value = e.target.value.replace(regexName, '');
                });
            }
            if(usernameInput) {
                usernameInput.addEventListener('input', e => {
                    e.target.value = e.target.value.replace(regexUsername, '');
                });
            }
            if(contactInput) {
                contactInput.addEventListener('input', e => {
                    e.target.value = e.target.value.replace(regexContact, '');
                });
            }

            // No specific live filtering for Password or Email
        });
    </script>
}