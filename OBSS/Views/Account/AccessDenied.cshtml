@model ErrorViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Error"];
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title text-danger">
                <i class="bi bi-exclamation-triangle-fill"></i> @Localizer["Error"]
            </h1>
            <h4 class="text-muted">@Localizer["ErrorMessage"]</h4>
        </div>
    </div>

    <!-- Error Card -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm border-danger">
                <div class="card-body">
                    @if (Model.ShowRequestId)
                    {
                        <p>
                            <strong>@Localizer["RequestId"]:</strong>
                            <code>@Model.RequestId</code>
                        </p>
                    }

                    <h5>@Localizer["DevelopmentMode"]</h5>
                    <p>
                        @Localizer["DevModeMessage"]
                    </p>
                    <p class="text-danger">
                        <strong>@Localizer["Important"]:</strong> @Localizer["ProdWarning"]
                    </p>
                    <p>
                        @Localizer["EnableDevInstructions"]
                    </p>
                </div>
                <div class="card-footer text-end">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> @Localizer["BackHome"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
