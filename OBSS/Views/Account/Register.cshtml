@model OBSS.Models.User
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Register"];
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">@Localizer["CreateAccount"]</h1>
        </div>
    </div>

    <!-- Centered Register Form -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="UserType" class="form-label">@Localizer["UserType"]</label>
                            <select asp-for="UserType" class="form-select"
                                    asp-items="@(new SelectList(ViewBag.UserTypes, "TypeId", "TypeDesc"))"></select>
                            <span asp-validation-for="UserType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">@Localizer["Username"]</label>
                            <input asp-for="UserName" class="form-control"
                                   pattern="^[A-Za-z0-9 .]+$"
                                   title="Only English letters, numbers, spaces, and periods are allowed (no Arabic characters)." />
                            <div class="form-text">Only English letters, numbers, spaces, and periods are allowed.</div>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">@Localizer["Password"]</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <div class="form-text">Password must be at least 8 characters long.</div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">@Localizer["FirstName"]</label>
                            <input asp-for="FirstName" class="form-control"
                                   pattern="^[A-Za-z .]+$"
                                   title="Only English letters, spaces, and periods are allowed (no Arabic characters)." />
                            <div class="form-text">Only English letters, spaces, and periods are allowed.</div>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">@Localizer["LastName"]</label>
                            <input asp-for="LastName" class="form-control"
                                   pattern="^[A-Za-z .]+$"
                                   title="Only English letters, spaces, and periods are allowed (no Arabic characters)." />
                            <div class="form-text">Only English letters, spaces, and periods are allowed.</div>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Birthdate" class="form-label">@Localizer["Birthdate"]</label>
                            <input asp-for="Birthdate" type="date" class="form-control" />
                            <span asp-validation-for="Birthdate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GenderId" class="form-label">@Localizer["Gender"]</label>
                            <select asp-for="GenderId" class="form-select"
                                    asp-items="@(new SelectList(ViewBag.Genders, "GenderId", "GenderDesc"))"></select>
                            <span asp-validation-for="GenderId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ContactNumber" class="form-label">@Localizer["ContactNumber"]</label>
                            <input asp-for="ContactNumber" class="form-control"
                                   pattern="^\d{10}$"
                                   title="Contact number must be exactly 10 digits" />
                            <div class="form-text">Contact number must be exactly 10 digits.</div>
                            <span asp-validation-for="ContactNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">@Localizer["Email"]</label>
                            <input asp-for="Email" type="email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Register Button -->
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-person-plus"></i> @Localizer["Register"]
                            </button>
                        </div>

                        <!-- Login Link -->
                        <p class="text-center mt-3 mb-0">
                            @Localizer["AlreadyHaveAccount"]
                            <a asp-controller="Account" asp-action="Login">@Localizer["LoginHere"]</a>.
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const usernameInput = document.getElementById('UserName');
            const firstNameInput = document.getElementById('FirstName');
            const lastNameInput = document.getElementById('LastName');
            const contactInput = document.getElementById('ContactNumber');

            // Regex for FirstName and LastName: Allows English letters, spaces, and periods. Implicitly disallows Arabic.
            const regexName = /[^A-Za-z .]/g;

            // Regex for UserName: Allows English letters, numbers, spaces, and periods. Implicitly disallows Arabic.
            const regexUsername = /[^A-Za-z0-9 .]/g;

            // Regex for ContactNumber: Allows only digits.
            const regexContact = /\D/g;

            if(firstNameInput) {
                firstNameInput.addEventListener('input', (e) => {
                    e.target.value = e.target.value.replace(regexName, '');
                });
            }

            if(lastNameInput) {
                lastNameInput.addEventListener('input', (e) => {
                    e.target.value = e.target.value.replace(regexName, '');
                });
            }

            if(usernameInput) {
                usernameInput.addEventListener('input', (e) => {
                    e.target.value = e.target.value.replace(regexUsername, '');
                });
            }

            if(contactInput) {
                contactInput.addEventListener('input', (e) => {
                    e.target.value = e.target.value.replace(regexContact, '');
                });
            }
        });
    </script>
}