@{
    ViewData["Title"] = "Login";
}
<link href="~/css/account/login.css" rel="stylesheet" />

<main class="auth-page">
    <section class="auth-section">
        <h1 class="auth-title">Login</h1>

        <form method="post" asp-controller="Account" asp-action="Login" class="auth-form">
            <div class="form-group">
                <label for="username">Username</label>
                <input id="username" name="username" type="text" class="form-control" placeholder="Enter your username" required />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input id="password" name="password" type="password" class="form-control" placeholder="Enter your password" required />
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="form-error text-danger">@ViewBag.Error</div>
            }

            <div class="form-actions mt-3">
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </div>

            <!-- Register link -->
            <p class="text-center mt-3">
                Don't have an account?
                <a asp-controller="Account" asp-action="Register">Register here</a>.
            </p>
        </form>
    </section>
</main>
