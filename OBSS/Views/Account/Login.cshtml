@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Login"];
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">@Localizer["Login"]</h1>
        </div>
    </div>

    <!-- Centered Login Form -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post" asp-controller="Account" asp-action="Login">
                        <div class="mb-3">
                            <label for="username" class="form-label">@Localizer["Username"]</label>
                            <input id="username" name="username" type="text"
                                   class="form-control"
                                   placeholder="@Localizer["EnterUsername"]"
                                   required
                                   pattern="^[A-Za-z0-9]+$"
                                   title="Only English letters and numbers are allowed" />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">@Localizer["Password"]</label>
                            <div class="input-group">
                                <input id="password" name="password" type="password"
                                       class="form-control"
                                       placeholder="@Localizer["EnterPassword"]" required />
                                <button type="button" class="btn btn-outline-secondary" id="togglePassword" tabindex="-1">
                                    <i class="bi bi-eye-slash"></i>
                                </button>
                            </div>
                        </div>

                        @if (ViewBag.Error != null)
                        {
                            <div class="text-danger mb-3">@ViewBag.Error</div>
                        }

                        <!-- Login Button -->
                        <div class="d-grid mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-right"></i> @Localizer["Login"]
                            </button>
                        </div>

                        <!-- Register Link -->
                        <p class="text-center mt-3 mb-0">
                            @Localizer["NoAccount"]
                            <a asp-controller="Account" asp-action="Register">@Localizer["RegisterHere"]</a>.
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        // Restrict username to English letters and numbers
        document.addEventListener('DOMContentLoaded', () => {
            const usernameInput = document.getElementById('username');
            usernameInput.addEventListener('input', (e) => {
                e.target.value = e.target.value.replace(/[^A-Za-z0-9]/g, '');
            });

            // Password visibility toggle
            const passwordInput = document.getElementById('password');
            const toggleBtn = document.getElementById('togglePassword');
            const icon = toggleBtn.querySelector('i');

            toggleBtn.addEventListener('click', () => {
                const isPassword = passwordInput.type === 'password';
                passwordInput.type = isPassword ? 'text' : 'password';
                icon.classList.toggle('bi-eye');
                icon.classList.toggle('bi-eye-slash');
            });
        });
    </script>
}
