@model IEnumerable<OBSS.Models.UserType>

@{
    ViewData["Title"] = "Index";
}

<h1>User Types</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<!-- Search box -->
<div class="mb-3">
    <input type="text" id="searchInput" class="form-control" placeholder="Search user types...">
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TypeDesc)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="userTypesTable">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TypeDesc</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TypeId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.TypeId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.TypeId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.getElementById("searchInput");
        const tableRows = document.querySelectorAll("#userTypesTable tr");

        searchInput.addEventListener("input", function () {
            const searchTerm = searchInput.value.toLowerCase();

            tableRows.forEach(row => {
                const typeDesc = row.cells[0].textContent.toLowerCase();
                if (typeDesc.includes(searchTerm)) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        });
    });
</script>
