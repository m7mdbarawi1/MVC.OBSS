@model OBSS.Models.User
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["UserDetails"];
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">@Localizer["UserDetails"]</h1>
        </div>
    </div>

    <!-- Centered Details Card -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">@Localizer["Details"]</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold">@Localizer["UserName"]</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.UserName)</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Password"]</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Password)</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["FirstName"]</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["LastName"]</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Birthdate"]</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Birthdate)</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["ContactNumber"]</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ContactNumber)</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Email"]</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Gender"]</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Gender.GenderDesc)</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["UserType"]</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.UserTypeNavigation.TypeDesc)</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-end gap-2">
                    <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-secondary">
                        <i class="bi bi-pencil-square"></i> @Localizer["Edit"]
                    </a>
                    <a asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-left-circle"></i> @Localizer["Back"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
