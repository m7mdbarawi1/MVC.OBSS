@model OBSS.Models.SalesDetail
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["DeleteSalesDetail"];
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title text-danger">@Localizer["DeleteSalesDetail"]</h1>
            <p class="text-muted">@Localizer["ConfirmDeleteMessage"]</p>
        </div>
    </div>

    <!-- Centered Delete Card -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">@Localizer["ConfirmDeletion"]</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold">@Localizer["Quantity"]</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantity)</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Price"]</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Book"]</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Book.BookTitle)</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["Sale"]</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Sale.SaleDate)</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-end gap-2">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="SaleId" />
                        <input type="hidden" asp-for="DetailId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> @Localizer["Delete"]
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> @Localizer["Cancel"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
