@model IEnumerable<OBSS.Models.SalesDetail>

@{
    ViewData["Title"] = "Sales Details";
}

<h1>Sales Details</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
    <a asp-action="DownloadReport" class="btn btn-success">Download Report</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Book)</th>
            <th>@Html.DisplayNameFor(model => model.Sale)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Book.BookId)</td>
                <td>@Html.DisplayFor(modelItem => item.Sale.SaleId)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.DetailId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.DetailId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.DetailId })
                </td>
            </tr>
        }
    </tbody>
</table>
