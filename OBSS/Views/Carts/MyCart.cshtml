@model List<OBSS.Models.CartDetail>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["MyCart"];
    decimal totalPrice = Model.Sum(cd => cd.Book.Price * cd.Quantity);
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">@Localizer["MyCart"]</h1>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info text-center">@TempData["Info"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Success"]</div>
    }

    <!-- Empty Cart -->
    @if (!Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body text-center text-muted py-4">
                @Localizer["CartEmpty"]
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0" id="cartTable">
                        <thead class="table-light">
                            <tr>
                                <th>@Localizer["Book"]</th>
                                <th>@Localizer["Author"]</th>
                                <th>@Localizer["Category"]</th>
                                <th style="width:100px;">@Localizer["Quantity"]</th>
                                <th>@Localizer["Price"]</th>
                                <th class="text-center">@Localizer["Action"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr data-book-id="@item.BookId" class="table-row-hover">
                                    <td>@item.Book.BookTitle</td>
                                    <td>@item.Book.Author</td>
                                    <td>@item.Book.Category?.CategoryDesc</td>
                                    <td>
                                        <input type="number"
                                               min="1"
                                               max="@item.Book.QuantityInStore"
                                               value="@item.Quantity"
                                               class="form-control form-control-sm qty-input english-only text-center" />
                                    </td>
                                    <td class="item-price">@((item.Book.Price * item.Quantity).ToString("C"))</td>
                                    <td class="text-center">
                                        <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="bookId" value="@item.BookId" />
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="bi bi-trash"></i> @Localizer["Remove"]
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Total + Purchase -->
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mt-4 gap-2">
            <h4 class="mb-0">@Localizer["Total"]: <span id="totalPrice">@totalPrice.ToString("C")</span></h4>
            <form asp-action="Purchase" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="bi bi-cart-check"></i> @Localizer["Purchase"]
                </button>
            </form>
        </div>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Live quantity update via AJAX
        $(".qty-input").on("input", function () {
            let row = $(this).closest("tr");
            let bookId = row.data("book-id");
            let quantity = $(this).val();

            $.post("@Url.Action("UpdateQuantity", "Carts")", { bookId, quantity }, function (data) {
                if (data.success) {
                    row.find(".item-price").text(data.itemPrice.toLocaleString('en-US', { style: 'currency', currency: 'USD' }));
                    $("#totalPrice").text(data.totalPrice.toLocaleString('en-US', { style: 'currency', currency: 'USD' }));
                }
            });
        });

        // Restrict quantity input to English digits only
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll("input.english-only").forEach(input => {
                input.addEventListener("input", function () {
                    this.value = this.value.replace(/[^0-9]/g, '');
                });
            });
        });
    </script>
}
