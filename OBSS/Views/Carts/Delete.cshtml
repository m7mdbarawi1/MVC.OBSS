@model OBSS.Models.Cart
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["DeleteCart"];
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title text-danger">@Localizer["DeleteCart"]</h1>
            <p class="text-muted">@Localizer["ConfirmDeleteCart"]</p>
        </div>
    </div>

    <!-- Centered Delete Card -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">@Localizer["ConfirmDeletion"]</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold">@Localizer["CreationDate"]</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CreationDate)</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["User"]</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.UserName)</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-end gap-2">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="CartId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> @Localizer["Delete"]
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> @Localizer["Cancel"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
