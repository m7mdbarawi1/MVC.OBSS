@model OBSS.Models.Cart
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["CartDetails"];
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title">@Localizer["CartDetails"]</h1>
        </div>
    </div>

    <!-- Centered Details Card -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">@Localizer["Details"]</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-bold">@Localizer["CreationDate"]</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CreationDate)</dd>

                        <dt class="col-sm-4 fw-bold">@Localizer["User"]</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.UserName)</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-end gap-2">
                    <a asp-action="Edit" asp-route-id="@Model?.CartId" class="btn btn-secondary">
                        <i class="bi bi-pencil-square"></i> @Localizer["Edit"]
                    </a>
                    <a asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-left-circle"></i> @Localizer["BackToList"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
